<!DOCTYPE html>
<head>
<title>Home</title>
<link rel="stylesheet" href="/static/stylesheets/main.css" type="text/css">
<script src="https://kit.fontawesome.com/8a91947445.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>
<body>

  <ul>
    <li><a href="/home">Home</a></li>
    <li><a href="/addProduct">Admin</a></li>
    <li><a href="/shoppingCart">Shopping Cart</a></li>
    <li><a href="/Checkout">Checkout</a></li>
    <li class="user-symbol"><a href="/login"><i class="far fa-user"></i></a></li>  
  </ul>

    <div class="all-products">
        <%  products.forEach( product => { %>
          <div class=specific-product>
           <img style="height: 170px;" src= "<%= product.image %>" />   
                     
       <h3>   <%= product.name %> </h3>
          
       <h3>     <%= product.price %> SEK </h3>
           
        <h3>    <a href="/shoppingCart/<%=product.id%>">Add to Cart</a></h3></div>
          
         <%  }) %>
        </div>

</body>
</html>